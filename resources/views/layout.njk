<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Ribbiter</title>
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/dist/app.css">
  </head>
  <body>
    <div class="app">
      <div class="nav">
        <p class=nav__title>Ribbiter</p>
        <ul class="nav__right">
          <li class="nav__right-item"><a href="/app">Ribbits</a> </li>
          <li class="nav__right-item"><a href="/users">Frogs</a></li>
          {% if currentUser %}
            <li class="nav__right-item"><a href="/logout">Logout</a></li>
          {% else %}
            <li class="nav__right-item"><a href="/login">Login</a></li>
            {% endif %}
        </ul>
      </div>

      <div class="app__content">
        <div class="container">
          {% if old('error') %}
            <div>
              <p class="animated pulse alert alert--danger">{{  old('error') }}</p>
            </div>
          {% endif %}

          {% if old('success') %}
            <div>
              <p class="animated pulse alert alert--success">{{  old('success') }}</p>
            </div>
          {% endif %}
          {% block content %}

          {% endblock %}
        </div>
      </div>
    </div>
  </body>
</html>
